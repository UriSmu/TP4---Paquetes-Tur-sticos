@{
    ViewData["Title"] = "Index";
}

<div class="titulo">
    <h1>ORTWORLD</h1>
    <h3>Un viaje único</h3>
</div>
<div class="link">
    <a href='@Url.Action("SelectPaquete", "Home")' alt="Cargar un nuevo paquete"> Cargar Paquete</a>
</div>
@foreach(string destino in ViewBag.Paquetes.Keys)
{
    <div class="paquete">
        <h4>@destino</h4>
        <h4>@ViewBag.Paquetes[destino].Hotel</h4>
        <img src='@ViewBag.Paquetes[destino].Aereo'><br/>
        <img src='@ViewBag.Paquetes[destino].Excursion'>
    </div>
}
